<!DOCTYPE html>
<html>
  <head>
    <title>Mumbler</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <!-- Link for buttons and icon styling from materialize -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- turbolinks -->
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- devise alerts and errors for mistakes or successful sign in -->
    <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <!-- Navigation -->
      <nav>
        <div class="nav-wrapper">
          <a href="#" class="brand-logo center">Mumbler</a>
          <ul class="left hide-on-med-and-down">
    <!-- If statement for navigation -->
    <!-- Only allow users full access after sign in or up -->
      <% if user_signed_in? %>
      <li><%= link_to 'All Blogs', posts_path %></li>
      <li><%= link_to 'New post', new_post_path%></li>
      <li><%= link_to 'Edit Profile', edit_user_registration_path %></li>
      <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
      <% else %>
      <li><%= link_to 'Sign In', new_user_session_path %></li>
      <% end %>
      </ul>
    </div>
    </nav>
    <%= yield %>
  </body>
</html>
